    <a href="/transactions/<%= transaction.id %>/edit"><img src="edit.png" alt=""></a>
    <form action="/transactions/<%= transaction.id %>/delete" method="POST">
      <button type="submit" id="btn-delete">
        <img src="trash.png" alt="" id="delete-btn">
      </button>
  </form>
